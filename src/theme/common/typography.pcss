/*
	stylelint-disable
		custom-property-pattern,
*/

@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

:root {
	----font-family-display: 'Space Mono', monospace;
	----font-family-sans: 'Space Grotesk', 'Inter', 'Helvetica', sans-serif;
	----font-family-mono: 'Space Mono', monospace;

	color: var(----colour-text-primary);
	font-family: var(----font-family-sans);

	font-weight: 500;
}

h1 {
	color: var(----colour-accent-primary);
	font-family: var(----font-family-display);
	font-weight: 100;

	font-size: 4rem;
	margin-bottom: 0.7em;
	line-height: 0.8;

	letter-spacing: -0.05em;

	text-transform: lowercase;
}

h2 {
	color: var(----colour-accent-primary);
	font-family: var(----font-family-display);
	font-weight: 300;

	font-size: 3rem;
	margin-bottom: 0.7em;
	line-height: 0.8;

	letter-spacing: -0.04em;

	text-transform: lowercase;
}

h3 {
	color: var(----colour-accent-secondary);
	-webkit-text-stroke: 0.5px var(----colour-accent-primary);
	text-stroke: 0.5px var(----colour-accent-primary);
	font-family: var(----font-family-display);
	font-weight: 300;

	font-size: 2.26rem;
	margin-bottom: 0.7em;
	line-height: 0.8;

	letter-spacing: -0.03em;

	text-transform: lowercase;
}

h4 {
	color: var(----colour-text-primary);
	font-family: var(----font-family-display);
	font-weight: 300;

	font-size: 2.26rem;
	margin-block: 1em 1em;
	margin-bottom: 0.7em;
	line-height: 0.8;

	letter-spacing: -0.03em;

	text-transform: lowercase;
}

h5 {
	color: var(----colour-text-primary);
	font-family: var(----font-family-sans);
	font-weight: 700;

	font-size: 1.6rem;
	margin-bottom: 0.7em;
	line-height: 1;

	text-transform: lowercase;
}

h6 {
	color: var(----colour-text-primary);
	font-family: var(----font-family-sans);
	font-weight: 500;

	font-size: 1.6rem;
	margin-bottom: 0.7em;
	line-height: 1;

	text-transform: lowercase;
}

p {
	font-weight: 300;
}


input,
textarea,
label,
button {
	color: var(----colour-text-primary);
	font-family: var(----font-family-sans);

	font-weight: 400;
	font-size: 1em;
}

hr {
	width: 100%;
	border: 0;
	border-top: 1px solid var(----colour-text-primary);
	margin-block: 0.5em 0.5em;
	opacity: 0.3;
}

a:any-link {
	color: var(----colour-accent-primary);
	text-underline-offset: 0.2em;
	text-decoration-thickness: 1px;
	font-weight: 400;

	/* text-shadow: 0 0 0 var(----colour-accent-primary); */

	filter: brightness(1);
	transition: filter 0.2s var(----ease-fast-slow),
		text-shadow 0.2s var(----ease-fast-slow),
		color 0.2s var(----ease-fast-slow),
		text-underline-offset 0.2s var(----ease-fast-slow);

	&:hover {
		/* text-shadow: 0 0.5em 0.5em var(----colour-accent-primary); */

		/* font-weight: 900;
		letter-spacing: -0.035em; */

		filter: brightness(1.2);
		text-underline-offset: 0.4em;
	}

	&:active {
		color: var(----colour-accent-secondary);
	}
}

code {
	font-family: var(----font-family-mono);
	font-weight: 400;
	font-size: 1em;
}
